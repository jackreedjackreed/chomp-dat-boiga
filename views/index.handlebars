<div class="big">
  <div class="container" id="welcome">
    <h2>Welcome to Eat Dat Boiga</h2>
    <div >
      <img id="burgerImg" src="assets/img/burger.png" alt="Burger Image">
    </div>
  </div>

  <div class="container" id="addBoiga">
    <h2 class="title">Add a Boiga</h2>
    <form id="create-form">

      <div class="form-group">
        <label for="ca">Boiga Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="devoured" class="form-group">
        <label  for="devoured">Devoured?</label><br>
        <div class="options">
          <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0" id="notDevoured"> Not Devoured
        </div>
      </div>

      <button type="submit">Add Boiga</button>
    </form>
  </div>

  <div class="container" class="boigaBox">
    <h1>Boigas!</h1>
    <div class="container">
      <h2>Boigas that are not devoured!</h2>

      <ul>
        {{#each boigas}}
        {{#unless devoured}}
        {{> boigas/boiga-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="container">

      <h2>Boigas that are devoured!</h2>

      <ul>
        {{#each boigas}}
        {{#if devoured}}
        {{> boigas/boiga-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>